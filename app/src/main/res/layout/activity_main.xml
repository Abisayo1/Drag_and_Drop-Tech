<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_goal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="96dp"
        android:background="#00FFFFFF" />

    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="87dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/leftLayout"
        android:background="#00FFFFFF" />

    <RelativeLayout
        android:id="@+id/originalLayout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/leftLayout"
        android:layout_marginLeft="400dp"
        android:layout_marginBottom="150dp"
        android:background="#000000"
        android:translationX="0dp"
        android:translationY="200dp" />

    <ImageView
        android:id="@+id/footballImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/leftLayout"
        android:layout_marginLeft="400dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/ball"
        android:translationX="0dp"
        android:translationY="200dp" />

    <Button
        android:id="@+id/moveToRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to Right Layout" />

</RelativeLayout>
